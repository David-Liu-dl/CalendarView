<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="page_text_size" format="dimension"/>

    <!-- for vendor view common attrs-->
    <attr name="cellNum" format="integer"/>
    <attr name="hourHeight" format="dimension"/>
    <attr name="leftBarWidth" format="dimension"/>
    <attr name="topSpace" format="dimension"/>
    <attr name="headerHeight" format="dimension"/>
    <attr name="allDayEventHeight" format="dimension"/>
    <attr name="allDayTimeslotHeight" format="dimension"/>

    <declare-styleable name="viewBody">
        <attr name="cellNum"/>
        <attr name="leftBarWidth"/>
        <attr name="topSpace"/>
        <attr name="hourHeight"/>
        <attr name="allDayEventHeight"/>
        <attr name="allDayTimeslotHeight"/>
    </declare-styleable>

    <declare-styleable name="viewHeader">
        <attr name="headerHeight"/>
    </declare-styleable>

    <declare-styleable name="WeekView">
        <attr name="cellNum"/>
        <attr name="leftBarWidth"/>
        <attr name="topSpace"/>
        <attr name="hourHeight"/>
        <attr name="headerHeight"/>
        <attr name="allDayEventHeight"/>
    </declare-styleable>

    <declare-styleable name="TimeSlotView">
        <attr name="cellNum"/>
        <attr name="leftBarWidth"/>
        <attr name="topSpace"/>
        <attr name="hourHeight"/>
        <attr name="headerHeight"/>
        <attr name="allDayEventHeight"/>
        <attr name="allDayTimeslotHeight"/>
    </declare-styleable>

    <declare-styleable name="MonthView">
        <attr name="cellNum"/>
        <attr name="leftBarWidth"/>
        <attr name="topSpace"/>
        <attr name="hourHeight"/>
        <attr name="allDayEventHeight"/>
    </declare-styleable>

    <declare-styleable name="MonthAgendaView">
        <attr name="MonthAgendaViewBackToday" format="string"/>
    </declare-styleable>
    <!-- end binding -->
    <declare-styleable name="WeekTimeSlotView">
        <attr name="onTimeSlotWeekViewChange" format="string"/>
        <attr name="onTimeSlotClick" format="string"/>
    </declare-styleable>

    <declare-styleable name="dayStyle">
        <attr name="display_length" format="integer"/>
        <attr name="state_current" format="boolean" />
        <attr name="lineHeight" format="dimension" />
        <attr name="timeTextSize" format="dimension" />
        <attr name="headerNormalTextColorOdd" format="color" />
        <attr name="headerNormalTextColorEven" format="color" />
        <attr name="headerTodayTextColor" format="color" />
        <!--<attr name="headerNormalTextColor" format="color" />-->
        <attr name="headerSelectedTextColor" format="color" />
        <attr name="todaySelectedCircleBgColor" format="color" />
        <attr name="otherSelectedCircleBgColor" format="color" />
    </declare-styleable>

    <attr name="calendarViewStyle" format="reference" />
</resources>
