<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="david.itime_calendar">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ITime">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AgendaViewActivity"/>
        <activity android:name=".activities.DayViewActivity"/>
        <activity android:name=".activities.TimeSlotActivity"/>
        <activity android:name=".activities.WeekViewActivity"/>
        <activity android:name=".activities.OverviewActivity"/>
    </application>

</manifest>